# Bio-MCP Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED SECRETS (Production)
# =============================================================================

# Database connection string
# Production: PostgreSQL connection to AWS RDS
# Development: Local PostgreSQL or SQLite
BIO_MCP_DATABASE_URL="postgresql://postgres:postgres@localhost:5433/postgres"

# PubMed E-utilities API key (required for production usage)
# Get your free API key from: https://www.ncbi.nlm.nih.gov/account/
BIO_MCP_PUBMED_API_KEY="your_pubmed_api_key_here"

# OpenAI API key (optional - for AI-powered features)
# Get your API key from: https://platform.openai.com/api-keys
BIO_MCP_OPENAI_API_KEY="your_openai_api_key_here"

# Weaviate vector database URL
# Production: Weaviate cloud or self-hosted
# Development: Local docker instance
BIO_MCP_WEAVIATE_URL="http://localhost:8080"

# =============================================================================
# S3/OBJECT STORAGE CONFIGURATION
# =============================================================================

# S3-compatible storage (MinIO for local development)
BIO_MCP_S3_ENDPOINT="http://localhost:9000"
BIO_MCP_S3_ACCESS_KEY="minioadmin"
BIO_MCP_S3_SECRET_KEY="minioadmin"
BIO_MCP_S3_BUCKET="bio-mcp-data"
BIO_MCP_S3_REGION="us-east-1"

# Archive Configuration
BIO_MCP_ARCHIVE_BUCKET="bio-mcp-archive"
BIO_MCP_ARCHIVE_PREFIX="pubmed"
BIO_MCP_ARCHIVE_COMPRESSION="zstd"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server identification
BIO_MCP_SERVER_NAME="bio-mcp-dev"

# Logging level: DEBUG, INFO, WARNING, ERROR
BIO_MCP_LOG_LEVEL="INFO"

# JSON structured logging (recommended for production)
BIO_MCP_JSON_LOGS="false"

# =============================================================================
# PERFORMANCE TUNING (Optional)
# =============================================================================

# Database connection pool settings
BIO_MCP_DB_POOL_SIZE="5"
BIO_MCP_DB_MAX_OVERFLOW="10"
BIO_MCP_DB_POOL_TIMEOUT="30.0"
BIO_MCP_DB_ECHO="false"

# PubMed API rate limiting
BIO_MCP_PUBMED_RATE_LIMIT="3"
BIO_MCP_PUBMED_TIMEOUT="30.0"

# =============================================================================
# JOB QUEUE / WORKER CONFIGURATION
# =============================================================================

# Job Queue Configuration
BIO_MCP_JOBS_ENABLED="true"
BIO_MCP_JOBS_POLL_INTERVAL="5"
BIO_MCP_WORKER_CONCURRENCY="2"

# API Server Configuration
BIO_MCP_API_HOST="0.0.0.0"
BIO_MCP_API_PORT="8000"

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Chunking configuration
BIO_MCP_CHUNKER_TARGET_TOKENS="325"
BIO_MCP_CHUNKER_MAX_TOKENS="450"  
BIO_MCP_CHUNKER_MIN_TOKENS="120"
BIO_MCP_CHUNKER_OVERLAP_TOKENS="50"
BIO_MCP_CHUNKER_VERSION="v1.2.0"

# Tokenizer configuration
BIO_MCP_TOKENIZER_MODEL="pritamdeka/BioBERT-mnli-snli-scinli-scitail-mednli-stsb"
BIO_MCP_TOKENIZER_FALLBACK="true"

# UUID namespace for deterministic chunk IDs (set once, never change)
BIO_MCP_UUID_NAMESPACE="1b2c3d4e-0000-0000-0000-000000000000"

# Model versioning
BIO_MCP_DOCUMENT_SCHEMA_VERSION="1"
BIO_MCP_CHUNKER_VERSION="v1.2.0"

# =============================================================================
# WEAVIATE V2 CONFIGURATION
# =============================================================================

# Weaviate V2 collection settings
BIO_MCP_WEAVIATE_V2_COLLECTION="DocumentChunk_v2"
BIO_MCP_WEAVIATE_V2_VECTORIZER="huggingface"
BIO_MCP_WEAVIATE_V2_MODEL="pritamdeka/BioBERT-mnli-snli-scinli-scitail-mednli-stsb"

# Search configuration  
BIO_MCP_SEARCH_DEFAULT_LIMIT="10"
BIO_MCP_SEARCH_MAX_LIMIT="100"
BIO_MCP_SEARCH_DEFAULT_MODE="hybrid"
BIO_MCP_SEARCH_HYBRID_ALPHA="0.5"

# =============================================================================
# BUILD INFORMATION (Set by CI/CD)
# =============================================================================

# These are typically set by your build process
# BIO_MCP_VERSION="1.0.0"
# BIO_MCP_BUILD="build-123"
# BIO_MCP_COMMIT="abc123def"